<body>

  <h1>üéâ V√≤ng Quay May M·∫Øn üéâ</h1>

  <input type="text" id="nameInput" placeholder="Nh·∫≠p t√™n ng∆∞·ªùi ch∆°i" />
  <button id="addName">Th√™m</button>

  <div id="namesList">Danh s√°ch: (ch∆∞a c√≥ ai)</div>

  <div id="pointer"></div>
  <div class="wheel" id="wheel"></div>

  <button id="spinWheel">Quay!</button>

  <div id="winner"></div>

  <script>
    const nameInput = document.getElementById('nameInput');
    const addNameBtn = document.getElementById('addName');
    const namesListDiv = document.getElementById('namesList');
    const wheelDiv = document.getElementById('wheel');
    const spinBtn = document.getElementById('spinWheel');
    const winnerDiv = document.getElementById('winner');

    let names = [
      "Qu·ª≥nh Anh", "Minh Th∆∞", "Ng·ªçc Anh", "Thanh H∆∞∆°ng",
      "Nh√£ K·ª≥", "Qu·ª≥nh Nga", "Gia Ng√¢n", "Kh√°nh Ng·ªçc",
      "PH∆Ø∆†NG TH√ôY", "B·∫£o Tr√¢n", "B√≠ch Tuy·ªÅn", "T∆∞·ªùng Vy"
    ];

    let currentRotation = 0;

    function updateNamesList() {
      if (names.length === 0) {
        namesListDiv.textContent = 'Danh s√°ch: (ch∆∞a c√≥ ai)';
      } else {
        namesListDiv.textContent = 'Danh s√°ch: ' + names.join(', ');
      }
    }

    function renderWheel() { wheelDiv.innerHTML = '';
      const angleStep = 360 / names.length;

      names.forEach((name, index) => {
        const segment = document.createElement('div');
        segment.className = 'segment';
        segment.style.transform = `rotate(${index * angleStep}deg) skewY(-${90 - angleStep}deg)`;
        segment.style.background = index % 2 === 0 ? '#f9c74f' : '#90be6d';
        segment.textContent = name;
        wheelDiv.appendChild(segment);
      });
    }

    addNameBtn.addEventListener('click', () => {
      const name = nameInput.value.trim();
      if (name && !names.includes(name)) {
        names.push(name);
        nameInput.value = '';
        updateNamesList();
        renderWheel();
      }
    });

    function spinWheel() {
      if (names.length === 0) {
        alert('B·∫°n ch∆∞a th√™m t√™n n√†o!');
        return;
      }

      const randomIndex = Math.floor(Math.random() * names.length);
      const degreesPerSlice = 360 / names.length;
      const targetRotation = 360 * 5 + (360 - randomIndex * degreesPerSlice - degreesPerSlice / 2);
      currentRotation += targetRotation;

      wheelDiv.style.transition = 'transform 4s ease-out';
      wheelDiv.style.transform = `rotate(${currentRotation}deg)`;

      setTimeout(() => {
        winnerDiv.textContent = `üéâ Ng∆∞·ªùi chi·∫øn th·∫Øng l√†: ${names[randomIndex]}! üéâ`;
      }, 4000);
    }

    spinBtn.addEventListener('click', spinWheel);

    // Kh·ªüi t·∫°o
    updateNamesList();
    renderWheel();
  </script>
