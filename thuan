    <script>
        document.getElementById('startButton').addEventListener('click', () => {
            const initialScreen = document.getElementById('initialScreen');
            const flowerScreen = document.getElementById('flowerScreen');
            const messageText = document.getElementById('messageText');
            const flowers = document.querySelectorAll('.flower-container');
            const flowerHeads = document.querySelectorAll('.flower');

            // 1. ·∫®n m√†n h√¨nh ban ƒë·∫ßu
            initialScreen.classList.add('hidden');
            
            // Ch·ªù CSS transition k·∫øt th√∫c (1s) r·ªìi m·ªõi hi·ªán m√†n h√¨nh hoa
            setTimeout(() => {
                initialScreen.style.display = 'none';
                flowerScreen.classList.add('visible');
                
                // 2. K√≠ch ho·∫°t hi·ªáu ·ª©ng hoa n·ªü v√† hi·ªÉn th·ªã th√¢n c√¢y
                flowers.forEach((flowerContainer, index) => {
                    // Tr·ªÖ ƒë·ªÉ t·∫°o hi·ªáu ·ª©ng l·∫ßn l∆∞·ª£t
                    setTimeout(() => {
                        flowerContainer.classList.add('bloom');
                        // Sau khi th√¢n c√¢y v√† cu·ªëng hoa ƒë√£ hi·ªán, b·∫Øt ƒë·∫ßu n·ªü
                        setTimeout(() => {
                            flowerHeads[index].classList.add('bloomed');
                        }, 500); // N·ªü sau 0.5s th√¢n c√¢y xu·∫•t hi·ªán
                    }, index * 200); // M·ªói hoa tr·ªÖ 0.2s so v·ªõi hoa tr∆∞·ªõc
                });

                // 3. Hi·ªÉn th·ªã l·ªùi ch√∫c sau khi t·∫•t c·∫£ hoa ƒë√£ n·ªü
                setTimeout(() => {
                    messageText.classList.add('show');
                }, flowers.length * 200 + 1000); // T·ªïng th·ªùi gian n·ªü + 1s

                // 4. B·∫Øt ƒë·∫ßu hi·ªáu ·ª©ng r∆°i c·ªßa c√°c ph·∫ßn t·ª≠
                startFallingItems();

            }, 1000); // ·∫®n m√†n h√¨nh ban ƒë·∫ßu m·∫•t 1s

        });

        // =================================================
        //                 FALLING ITEMS LOGIC
        // =================================================
        function createFallingItem() {
            const item = document.createElement('div');
            item.classList.add('falling-item');

            const size = Math.random() * 15 + 10; // K√≠ch th∆∞·ªõc 10px ƒë·∫øn 25px
            item.style.width = `${size}px`;
            item.style.height = `${size}px`;
            
            // Ng·∫´u nhi√™n hoa ho·∫∑c tim
            const type = Math.random();
            if (type < 0.3) {
                // Tim (nh∆∞ trong video)
                item.style.backgroundColor = '#d81b60'; 
                item.style.borderRadius = '0'; // Kh√¥ng tr√≤n
                // T·∫°o h√¨nh tr√°i tim ƒë∆°n gi·∫£n b·∫±ng transform
                item.style.transform = 'rotate(-45deg)';
                item.style.clipPath = 'polygon(50% 100%, 0 40%, 0 0, 100% 0, 100% 40%)';
            } else if (type < 0.6) {
                // Hoa c√°nh ƒë∆°n gi·∫£n (nh∆∞ trong video)
                item.style.backgroundColor = '#ec407a';
                item.style.boxShadow = '0 0 5px rgba(255, 255, 255, 0.5)';
            } else {
                // Hoa c√°nh ƒë∆°n gi·∫£n m√†u h·ªìng nh·∫°t h∆°n
                item.style.backgroundColor = '#f8bbd0';
                item.style.boxShadow = '0 0 5px rgba(255, 255, 255, 0.5)';
            }

            // V·ªã tr√≠ xu·∫•t ph√°t ng·∫´u nhi√™n
            item.style.left = `${Math.random() * 100}vw`; 
            item.style.top = `-${size}px`; // B·∫Øt ƒë·∫ßu t·ª´ ngo√†i m√†n h√¨nh

            // T·ªëc ƒë·ªô r∆°i v√† th·ªùi gian ho·∫°t h√¨nh ng·∫´u nhi√™n
            const duration = Math.random() * 10 + 5; // 5s ƒë·∫øn 15s
            item.style.animationDuration = `${duration}s`;
            item.style.animationDelay = `-${Math.random() * duration}s`; // B·∫Øt ƒë·∫ßu ·ªü c√°c giai ƒëo·∫°n kh√°c nhau

            document.body.appendChild(item);

            // X√≥a ph·∫ßn t·ª≠ sau khi r∆°i xong ƒë·ªÉ ti·∫øt ki·ªám b·ªô nh·ªõ
            item.addEventListener('animationiteration', () => {
                item.remove();
            });

            // X√≥a sau m·ªôt kho·∫£ng th·ªùi gian d√†i n·∫øu animation kh√¥ng k√≠ch ho·∫°t l·∫°i (d·ª± ph√≤ng)
            setTimeout(() => {
                if(document.body.contains(item)) {
                    item.remove();
                }
            }, duration * 1000 + 1000);
        }

        function startFallingItems() {
            // T·∫°o m·ªôt lu·ªìng hi·ªáu ·ª©ng r∆°i
            setInterval(createFallingItem, 200); // T·∫°o m·ªôt ph·∫ßn t·ª≠ r∆°i m·ªõi m·ªói 0.2 gi√¢y
        }
    </script>

